{% extends 'base.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <h1>Voyage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nb_place</th>
                <th>Heure_depart</th>
                <th>Heure_arrive</th>
                <th>Created_at</th>
                <th>Description</th>
                <th>Slug</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td>{{ voyage.id }}</td>
                <td>{{ voyage.nbPlace }}</td>
                <td>{{ voyage.heureDepart ? voyage.heureDepart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ voyage.heureArrive ? voyage.heureArrive|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ voyage.createdAt ? voyage.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ voyage.description }}</td>
                <td>{{ voyage.slug }}</td>
                <td>{{ voyage.prix }}</td>
                <td>
                    <a href="{{ path('app_admin_voyage_show', {'id': voyage.id}) }}">show</a>
                    <a href="{{ path('app_admin_voyage_edit', {'id': voyage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_voyage_new') }}">Create new</a>
{% endblock %}
