{% extends 'base.html.twig' %}

{% block title %}Profile -
	{{user.lastname}}
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row mt-3 mb-2 text-center">
			<h5 class="">
				{{user.lastname}}
				{{user.firstname}}
			</h5>
		</div>
		<div class="row mt-3 mb-2 text-left">
			<h6 class="mr-2">Contact :</h6>
			<p class="mt-3">
				<strong>Email:</strong>
				<a href="mailto:{{ user.email }}">{{ user.email }}</a><br>
				<strong>Téléphone:</strong>
				{{ user.numTel }}
			</p>
		</div>
		<div class="row my-3 ml-1 text-left">
			{% include "profile_detail/_history_travel.html.twig" %}
		</div>

		{% endblock %}
