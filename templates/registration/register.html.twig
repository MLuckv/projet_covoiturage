{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<section class="container my-5">
		<div class="row">
			<div class="col">
				<h1>Inscription</h1>

				{{ form_start(registrationForm) }} {#rajouter ligne si nouveaux champ user#}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.firstname) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn btn btn-lg btn-primary">M'inscrire</button>
				<a class="btn btn-lg btn-secondary" href="{{ path('app_login') }}">Me connecter</a>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
